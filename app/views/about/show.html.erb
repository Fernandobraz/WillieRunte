<%- model_class = @about.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @about.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_number) %>:</strong></dt>
  <dd><%= @about.mobile_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:main_info) %>:</strong></dt>
  <dd><%= @about.main_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto_file_name) %>:</strong></dt>
  <dd><%= @about.foto_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto_content_type) %>:</strong></dt>
  <dd><%= @about.foto_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto_file_size) %>:</strong></dt>
  <dd><%= @about.foto_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto_updated_at) %>:</strong></dt>
  <dd><%= @about.foto_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              about_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_about_path(@about), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              about_path(@about),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
